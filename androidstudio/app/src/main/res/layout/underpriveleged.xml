<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/underpriveleged_constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#FFCC70">




    <View
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_weight="1" />

    <TextView
        android:id="@+id/login_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="15dp"
        android:text="Log In"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.022"
        tools:text="Log In" />


    <Button
        android:id="@+id/shelterButton"
        android:layout_width="359dp"
        android:layout_height="106dp"
        android:onClick="sendMessage"
        android:text="Shelters"
        android:textColor="#000000"
        android:theme="@style/Button.Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/foodButton"
        android:layout_width="359dp"
        android:layout_height="106dp"
        android:text="Food Banks"
        android:textColor="#000000"
        android:onClick="sendMessage"
        android:theme="@style/Button.Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/shelterButton"
        app:layout_constraintVertical_bias="0.363" />

    <Button
        android:id="@+id/hotlinesButton"
        android:layout_width="359dp"
        android:layout_height="106dp"
        android:text="Hotlines"
        android:textColor="#000000"
        android:onClick="sendMessage"
        android:theme="@style/Button.Black"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/foodButton"
        app:layout_constraintVertical_bias="0.363" />


</androidx.constraintlayout.widget.ConstraintLayout>

