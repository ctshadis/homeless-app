                    app:layout_constraintTop_toBottomOf="@+id/phone_icon_4"
                    app:srcCompat="@drawable/home_icon" />

                <TextView
                    android:id="@+id/interfaithaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:text="91 June St."
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/homeIcon4"
                    app:layout_constraintTop_toBottomOf="@+id/interfaithphone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/ywcacard"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_margin="15dp"
                android:layout_marginTop="20dp"
                android:background="@drawable/rounded_cyan_border"
                android:orientation="vertical"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/interfaithcard">

                <TextView
                    android:id="@+id/ywca"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Y.W.C.A Of Central MA"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/phone_icon_5"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/ywca"
