                <TextView
                    android:id="@+id/jeremiahsPhone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:autoLink="phone"
                    android:clickable="true"
                    android:text="(508) 756-6403"
                    android:textColor="#000000"
                    android:textColorLink="#353535"
                    app:layout_constraintStart_toEndOf="@+id/phone_icon_2"
                    app:layout_constraintTop_toBottomOf="@+id/jeremiahs"
                    tools:text="(508) 756-6403" />

                <ImageView
                    android:id="@+id/homeIcon2"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toBottomOf="@+id/phone_icon_2"
                    app:srcCompat="@drawable/home_icon" />

                <TextView
                    android:id="@+id/jeremiahsaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:text="1059 Main St."
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/homeIcon2"
                    app:layout_constraintTop_toBottomOf="@+id/jeremiahsPhone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/francescard"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_cyan_border"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/jeremiahscard"
                tools:layout_editor_absoluteX="10dp">

                <TextView
                    android:id="@+id/frances"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Frances Perkins Home"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
