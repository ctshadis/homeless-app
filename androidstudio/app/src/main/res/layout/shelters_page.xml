                    app:layout_constraintTop_toBottomOf="@+id/phone_icon_3"
                    app:srcCompat="@drawable/home_icon" />

                <TextView
                    android:id="@+id/francesaddress"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:text="70 James St., Suite 139B"
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/homeIcon3"
                    app:layout_constraintTop_toBottomOf="@+id/francesPhone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/interfaithcard"
                android:layout_width="match_parent"
                android:layout_height="125dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_cyan_border"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/francescard"
                tools:layout_editor_absoluteX="10dp">

                <TextView
                    android:id="@+id/interfaith"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Interfaith Hospitality"
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/phone_icon_4"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
