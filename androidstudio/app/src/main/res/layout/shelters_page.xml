                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="8dp"
                    android:text="1 Salem Sq."
                    android:textColor="#000000"
                    app:layout_constraintStart_toEndOf="@+id/homeIcon5"
                    app:layout_constraintTop_toBottomOf="@+id/ywcaphone" />

            </androidx.constraintlayout.widget.ConstraintLayout>

            <androidx.constraintlayout.widget.ConstraintLayout
                android:id="@+id/veteranscard"
                android:layout_width="match_parent"
                android:layout_height="117dp"
                android:layout_margin="15dp"
                android:background="@drawable/rounded_cyan_border"
                android:orientation="vertical"
                app:layout_constraintTop_toBottomOf="@+id/ywcacard"
                tools:layout_editor_absoluteX="10dp">

                <TextView
                    android:id="@+id/veterans"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="16dp"
                    android:layout_marginLeft="16dp"
                    android:layout_marginTop="4dp"
                    android:text="Veterans, Inc."
                    android:textColor="#000000"
                    android:textSize="30sp"
                    android:textStyle="bold"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintTop_toTopOf="parent" />

                <ImageView
                    android:id="@+id/phone_icon_6"
                    android:layout_width="24dp"
                    android:layout_height="28dp"
                    android:layout_marginStart="50dp"
                    android:layout_marginLeft="50dp"
